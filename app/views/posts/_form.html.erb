<%= form_with model: post, html: {class: 'form-horizontal' } do |form| %>

  <div class="form-group">
    <%= form.label :name, "Nom", class: "col-md-4 control-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :image_file, "Image", class: 'col-md-4 control-label' %>
    <%= form.file_field :image_file, class: 'form-control' %>
    <% unless post.new_record? %>
      <%= image_tag post.image_url %>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :pet_ids, "Animaux", class: "col-md-4 control-label" %>
    <%= form.select :pet_ids, current_user.pets.pluck(:name, :id), {}, multiple: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :content, "Contenu", class: "col-md-4 control-label" %>
    <%= form.text_area :content, class: "form-control" %>
  </div>

  <div class="form-group">
    <div class="col-md-6 col-md-offset-4">
      <%= form.submit post.new_record? ? 'CrÃ©er' : 'Modifier', class: 'btn btn-success mt-2' %>
    </div>
  </div>
<% end %>
