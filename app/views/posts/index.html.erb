<% content_for :tab, :posts, :flush => true %>
<% content_for :content do %>


<h1>Posts</h1>
  <p class="text-right">
    <%= link_to 'Ajouter un article', new_post_path, class: 'btn btn-primary'%>
  </p>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Image</th>
        <th>Nom</th>
        <th>Contenu</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= image_tag post.image_url %></td>
          <td><%= post.name %></td>
          <td><%= post.content %></td>
          <td>
      <%= link_to 'Voir', post_path(post), class: 'btn btn-default'%>
      <%= link_to 'Modifier', edit_post_path(post), class: 'btn btn-primary'%>
      <%= link_to 'Supprimer', post_path(post), data: { turbo_method: :delete, turbo_confirm: "Êtes-vous sûr de vouloir supprimer ?"}, class: 'btn btn-danger'%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>


<% end %>
<%= render template: 'layouts/profile' %>
