<!-- Page de demande de recupération de mot de passe  -->

<div class="panel panel-default">
  <div class="panel-heading h5">Récupération de mot de passe</div>
  <div class="panel-body">
    <%= form_with model: @user, url: passwords_path,  html: {class: 'form-horizontal'} do |form| %>

      <div class="form-group">
        <%= form.label :email, "Email", class: 'col-md-4 control-label' %>
          <%= form.email_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <div class="col-md-6 col-md-offset-4">
          <%= form.submit 'Récupérer le mot de passe' , class: 'btn btn-success' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
