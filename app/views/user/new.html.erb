<div class="panel panel-default">
  <div class="panel-heading">S'inscrire</div>
  <div class="panel-body">
    <%= form_with user: @user, class: 'form-horizontal' do |form| %>

      <div class="form-group">
        <%= form.label :username, "Nom d'utilisateur", class: 'col-md-4 control-label' %>
        <div class="col-md-6">
          <%= form.text_field :username, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= form.label "Email", class: 'col-md-4 control-label' %>
        <div class="col-md-6">
          <%= form.text_field :email, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= form.label "Mot de passe", class: 'col-md-4 control-label' %>
        <div class="col-md-6">
          <%= form.password_field :password, class: 'form-control' %>
        </div>
      </div>

    <% end %>
  </div>
</div>
