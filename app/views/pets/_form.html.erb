   <%= form_with model: pet, html: {class: 'form-horizontal'} do |form| %>

      <div class="form-group">
        <%= form.label :name, "Nom", class: 'col-md-4 control-label' %>
          <%= form.text_field :name, class: 'form-control' %>
        <% pet.errors.full_messages_for(:name).each do |message| %>
          <div class='text-danger'><%= message %></div>
        <% end %>
      </div>

      <div class="form-group">
        <%= form.label :gender, "Genre", class: 'col-md-4 control-label' %>
        <%= form.select :gender, {Male: :M, Femelle: :F},{}, class: 'form-control' %>
        <% pet.errors.full_messages_for(:gender).each do |message| %>
          <div class='text-danger'><%= message %></div>
        <% end %>
      </div>

      <div class="form-group">
        <%= form.label :species_id, "Espece", class: 'col-md-4 control-label' %>
        <%= form.select :species_id, Species.pluck(:name, :id),{}, class: 'form-control' %>
        <% pet.errors.full_messages_for(:species_id).each do |message| %>
          <div class='text-danger'><%= message %></div>
        <% end %>
      </div>

      <div class="form-group">
        <%= form.label :birthday, "Date de naissance", class: 'col-md-4 control-label' %>
          <%= form.text_field :birthday, class: 'form-control form-datepickr' %>
        <% pet.errors.full_messages_for(:birthday).each do |message| %>
          <div class='text-danger'><%= message %></div>
        <% end %>
      </div>

      <div class="form-group">
        <div class="col-md-6 col-md-offset-4">
          <%= form.submit pet.new_record? ? 'CrÃ©er' : 'Modifier', class: 'btn btn-success mt-2' %>
        </div>
      </div>

    <% end %>
